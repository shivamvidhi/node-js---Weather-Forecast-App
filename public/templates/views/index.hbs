<!Doctype html>
<html>
    <head>

        <link rel="icon" href="../../images/weather-icon.png">
        <title>
            Weather App
        </title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <link rel="stylesheet" href="../css/styles.css">
    </head>
    <body>
        <div class="main-content">
            {{!-- partial handlebars --}}
            {{>header}}
            <h3>
                Welcome To Weather App. Use this app to get your Weather.
            </h3>
            {{!-- <h2>{{title}}</h2> --}}
            {{!-- <p>Created By - {{name}}</p> --}}
            {{!-- <img src="../images/weather.png"> --}}

            <form>
                <input type="text" placeholder="Location  Area  City">
                <button>Search</button>
            </form>

            <p id="message-1"></p>
            <p id="message-2"></p>

            <div class="weather-banner">
                <p id="banner-heading">Weather Report</p>

                <h1 id="temperature"></h1>

                <p id="location"></p>

                <p id="weather-condition"></p>
            </div>

        </div>
       
        {{>footer}}
        <script src="../js/app.js"></script>
    </body>
    
</html>